<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<!--    <include-->
<!--        layout="@layout/action_bar_all"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space.10">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search Solution" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order"
                android:textColor="@color/black"
                android:textSize="@dimen/space.12" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Payment"
                android:textColor="@color/black"
                android:textSize="@dimen/space.12" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:padding="@dimen/space.10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space.125"
        android:background="@color/yellow"
        android:orientation="vertical">



        <TextView
            android:text="Hello Tom "
            android:textColor="@color/black"
            android:textSize="@dimen/space.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Do you need help ?"
            android:textColor="@color/black"
            android:textSize="@dimen/space.12"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/space.10"
            android:layout_height="wrap_content"/>


        <TextView
            android:gravity="right"
            android:text="Look Another History >"
            android:textColor="@color/black"
            android:textSize="@dimen/space.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>