<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRlAskWhiteDraw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form_history_transksi"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klink And Klink" />

        <TextView
            android:id="@+id/idSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Jakarta Barat, Kawasan Industri" />
    </LinearLayout>

    <TextView
        android:id="@+id/idTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Rp. 300.000."
        android:textSize="@dimen/space.12" />

</RelativeLayout>